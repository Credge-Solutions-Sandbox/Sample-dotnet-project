@page
@model m.Pages.Users.Index
@{
    ViewData["Title"] = "Index";
}

<h2 class = "text-center mb-3">List Of Users</h2>

<a class="btn btn-primary mb-3" href="/Users/Create">New User</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.UsersList){
            <tr>
                <td>@user.Id</td>
                <td>@(user.FirstName+" "+ user.LastName)</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@user.CreatedAt</td>
                <td style="white-space: nowrap">
                    <a class="btn btn-primary sm" href="/Users/Edit?id=@user.Id">Edit</a>
                    <a class="btn btn-primary sm" href="/Users/Delete?id=@user.Id">Delete</a>
            </tr>
        }
    </tbody>
</table>